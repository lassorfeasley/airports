/* Styles for the dropdown functionality */

.custom-dropdown {
    position: absolute;
    z-index: 1000;
    background-color: white;
    border: 1px solid #ccc;
    max-height: 150px;
    overflow-y: auto;
    display: none; /* Hidden by default */
    visibility: visible; /* Ensure container is visible */
}

.dropdown-option {
    padding: 8px;
    cursor: pointer;
    border-bottom: 1px solid #ddd;
    visibility: visible; /* Ensure options are visible */
}

.dropdown-option:first-child {
    background-color: #f0f0f0; /* Highlight the first option */
}

.dropdown-option:hover {
    background-color: #e0e0e0; /* Hover effect */
}

.dropdown-option.no-result {
